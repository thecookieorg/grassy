<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Manage Products</h2>
      <%= link_to 'Add New Product', new_product_path, class: "btn btn-success" %>
        <table class="table table-striped table-hover" style="margin-top: 30px;">
          <thead>
            <tr>
              <th>Name</th>
              <th>Price</th>
              <th>Weight</th>
              <th>Sku</th>
              <th>Description</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @products.each do |product| %>
              <tr>
                <td><%= product.name %></td>
                <td><%= product.price %></td>
                <td><%= product.weight %></td>
                <td><%= product.sku %></td>
                <td><%= product.description %></td>
                <%# link_to 'Show', product %>
                <td>
                  <%= link_to edit_product_path(product) do %>
                    <i class="fa fa-pencil-square-o btn btn-warning" aria-hidden="true"></i>
                  <% end %>
                </td>
                <td>
                  <%= link_to product, method: :delete, data: { confirm: "Delete #{product.name}?" } do %>
                    <i class="fa fa-trash btn btn-danger" aria-hidden="true"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div><!-- end col-md-12 -->
  </div><!-- end row -->
</div><!-- end container -->