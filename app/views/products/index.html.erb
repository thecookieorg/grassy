<div id="wrapper">
  <%= render 'dashboards/sidebar' %>

  <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                      <a href="#menu-toggle" class="btn btn-info btn-xs" id="menu-toggle">Toggle Menu</a>
                      <h1>Manage Products 
                        <%= link_to new_product_path, class: "btn btn-success btn-xs" do %>
                          <i class="fa fa-plus" aria-hidden="true"></i> Add New Product
                        <% end %>
                      </h1>
                      <small><em>*If a product was purchased by user - it can't be deleted. Once a product has been bought, it has too many dependencies with sales statistics, order history, etc.</em></small>
                      <hr>
                      <table class="table table-striped table-hover" style="margin-top: 30px;">
                        <thead>
                          <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Weight</th>
                            <th>Sku</th>
                            <th>Description</th>
                            <th>Keywords</th>
                            <th colspan="2"></th>
                          </tr>
                        </thead>

                        <tbody>
                          <% @products.each do |product| %>
                            <tr>
                              <td><%= product.name %></td>
                              <td><%= product.price %></td>
                              <td><%= product.weight %></td>
                              <td><%= product.sku %></td>
                              <td><%= product.description %></td>
                              <td><%= product.keywords %></td>
                              <%# link_to 'Show', product %>
                              <td>
                                <%= link_to edit_product_path(product) do %>
                                  <i class="fa fa-pencil-square-o btn btn-warning" aria-hidden="true"></i>
                                <% end %>
                              </td>
                              <td>
                                <%= link_to product, method: :delete, data: { confirm: "Delete product?" } do %>
                                  <i class="fa fa-trash btn btn-danger" aria-hidden="true"></i>
                                <% end %>
                              </td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
</div><!-- end wrapper -->


<%= render 'dashboards/toggle_sidebar_script' %>