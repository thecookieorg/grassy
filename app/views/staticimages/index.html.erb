<div id="wrapper">
  <%= render 'dashboards/sidebar' %>

  <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                      <a href="#menu-toggle" class="btn btn-info btn-xs" id="menu-toggle">Toggle Menu</a>
                      <h1>Manage Home Page Image
                        <% if @staticimages.count == 1 %>
                          </h1>
                          <p style="color: red;">You've added maximum of 1 image</p>
                        <% else %>
                          <%= link_to new_staticimage_path, class: "btn btn-success btn-xs" do %>
                            <i class="fa fa-plus" aria-hidden="true"></i> Add New Image
                          <% end %>
                        </h1>
                        <% end %>
                      <hr>
                      <table class="table table-striped table-hover" style="margin-top: 30px;">
                        <thead>
                          <tr>
                            <th>Home Page Image</th>
                            <th colspan="3"></th>
                          </tr>
                        </thead>

                        <tbody>
                          <% @staticimages.each do |s| %>
                            <tr>
                              <td><%= image_tag s.staticpic.large, class: "img-responsive", style: "width: 40%;" %> </td>
                              <td><%= link_to 'Show', s %></td>
                              <td><%= link_to 'Edit', edit_staticimage_path(s) %></td>
                              <td><%= link_to 'Delete', s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
</div><!-- end wrapper -->