<div id="wrapper">
  <%= render 'dashboards/sidebar' %>

  <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                      <a href="#menu-toggle" class="btn btn-info btn-xs" id="menu-toggle">Toggle Menu</a>
                        <h1>Manage Categories</h1>
                        <%= link_to 'Add New Category', new_category_path, class: "btn btn-success" %>
                        <table class="table table-striped table-hover ">
                          <thead>
                            <tr>
                              <th>Name</th>
                              <th colspan="2"></th>
                            </tr>
                          </thead>

                          <tbody>
                            <% @categories.each do |category| %>
                              <tr>
                                <td><%= category.name %></td>
                                <td>
                                  <%= link_to edit_category_path(category) do %>
                                    <i class="fa fa-pencil-square-o btn btn-warning" aria-hidden="true"></i>
                                  <% end %>
                                </td>
                                <td>
                                  <%= link_to category, method: :delete, data: { confirm: "Delete #{category.name}?" } do %>
                                    <i class="fa fa-trash btn btn-danger" aria-hidden="true"></i>
                                  <% end %>
                                </td>
                              </tr>
                            <% end %>
                          </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
</div><!-- end wrapper -->



<%= render 'dashboards/toggle_sidebar_script' %>
