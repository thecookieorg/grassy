<div class="container">
  <div class="row">
    <% if current_user.admin? %>
      <h1>All Orders</h1>
    <% else %>
      <h1>My Orders</h1>
    <% end %>
    <hr>
    <table class="table table-striped">
      <thead>
        <tr>
          <!--<th>Pay type</th>-->
          <th>Order Date/Time</th>
          <th>Product Name</th>
          <th>Quantity</th>
          <th>Buyer</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <!--<td><%#= order.pay_type %></td>-->
            <td><%= order.created_at.try(:strftime, '%b %e, %l:%M %p') %></td>
            <td>
            <% order.line_items.each do |l| %>
              <%= l.product.name %><br>
            <% end %>
            </td>
            <td>
            <% order.line_items.each do |l| %>
              <%= l.quantity %><br>
            <% end %>
            </td>
            <td><%= order.user.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div><!-- end row -->
</div><!-- end container -->