<div id="wrapper">
  <%= render 'dashboards/sidebar' %>

  <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                      <a href="#menu-toggle" class="btn btn-info btn-xs" id="menu-toggle">Toggle Menu</a>
                        <h1>Manage Store Policies</h1>
                    <%= link_to 'New Store policy', new_store_policy_path, class: "btn btn-success" %>
                      <table class="table table-striped table-hover" style="margin-top: 30px;">
                        <thead>
                          <tr>
                            <th>Name</th>
                            <th>Content</th>
                            <th colspan="2"></th>
                          </tr>
                        </thead>

                        <tbody>
                          <% @store_policies.each do |store_policy| %>
                            <tr>
                              <td><%= store_policy.name %></td>
                              <td><%= store_policy.content %></td>
                              <td>
                                <%= link_to edit_store_policy_path(store_policy) do %>
                                  <i class="fa fa-pencil-square-o btn btn-warning" aria-hidden="true"></i>
                                <% end %>
                              </td>
                              <td>
                                <%= link_to store_policy, method: :delete, data: { confirm: "Delete #{store_policy.name}?" } do %>
                                  <i class="fa fa-trash btn btn-danger" aria-hidden="true"></i>
                                <% end %>
                              </td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
</div><!-- end wrapper -->


<%= render 'dashboards/toggle_sidebar_script' %>