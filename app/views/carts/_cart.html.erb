<h4>Your Grassy Cart</h4>
<table>
	<%= render(cart.line_items) %>

	<tr class="total_line">
		<td colspan="2">Total</td>
		<td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
	</tr>
</table>
<div class="row">
	<div class="col-md-6">
		<%= button_to "Checkout", new_order_path, method: :get %>
	</div><!-- end col-md-6 -->
	<div class="col-md-6">
		<%= button_to cart, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: 'Are you sure?' } do %>
			<i class="fa fa-trash" aria-hidden="true"></i> Empty Cart
		<% end %>
	</div><!-- end col-md-6 -->
</div><!-- end row -->
