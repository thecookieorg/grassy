<div id="wrapper">
  <%= render 'dashboards/sidebar' %>

  <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                      <a href="#menu-toggle" class="btn btn-info btn-xs" id="menu-toggle">Toggle Menu</a>
                      <h1>Manage Slideshow Images
                        <% if @slideshows.count == 4 %>
                          </h1>
                          <p style="color: red;">You've added maximum of 4 images</p>
                        <% else %>
                          <%= link_to new_slideshow_path, class: "btn btn-success btn-xs" do %>
                            <i class="fa fa-plus" aria-hidden="true"></i> Add New Image
                          <% end %>
                        </h1>
                        <% end %>
                      
                      <small><em>*If a product was purchased by user - it can't be deleted. Once a product has been bought, it has too many dependencies with sales statistics, order history, etc.</em></small>
                      <hr>
                      <table class="table table-striped table-hover" style="margin-top: 30px;">
                        <thead>
                          <tr>
                            <th>Slideshow Images</th>
                            <th colspan="3"></th>
                          </tr>
                        </thead>

                        <tbody>
                          <% @slideshows.each do |slideshow| %>
                            <tr>
                              <td><%= image_tag slideshow.slideshow.large, class: "img-responsive", style: "width: 40%;" %> </td>
                              <td><%= link_to 'Show', slideshow %></td>
                              <td><%= link_to 'Edit', edit_slideshow_path(slideshow) %></td>
                              <td><%= link_to 'Delete', slideshow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
</div><!-- end wrapper -->