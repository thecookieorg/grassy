<div id="wrapper">
	<%= render 'dashboards/sidebar' %>

	<!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                    	<a href="#menu-toggle" class="btn btn-info btn-xs" id="menu-toggle">Toggle Menu</a>
                        <h1>Store Settings</h1>

                        <!-- manage social media -->
                        <table class="table table-striped table-hover ">
						  <thead>
						    <tr>
						      <th>Social Media Accounts</th>
						      <th>Facebook</th>
						      <th>Twitter</th>
						      <th>Instagram</th>
						      <th colspan="3"></th>
						    </tr>
						  </thead>
						  <tbody>
						    <tr>
						      <td></td>
						      <td><span class="label label-success">Added</span></td>
						      <td><span class="label label-warning">Missing</span></td>
						      <td><span class="label label-warning">Missing</span></td>
						      <td><%= link_to "#" do %>
                                  <i class="fa fa-info btn btn-info" aria-hidden="true"></i>
                                <% end %></td>
						    </tr>
						  </tbody>
						</table> 
						<!-- end social media -->

						<div class="row">
							<div class="col-md-6">

								<!-- manage store policies -->
								<table class="table table-striped table-hover" style="margin-top: 50px;">
		                        <thead>
		                          <tr>
		                            <th>Store Policies</th>
		                            <th colspan="2"></th>
		                          </tr>
		                        </thead>

		                        <tbody>
		                          <% @store_policies.each do |store_policy| %>
		                            <tr>
		                              <td><%= store_policy.name %></td>
		                              <td><%= link_to store_policies_path do %>
		                                  <i class="fa fa-info btn btn-info" aria-hidden="true"></i>
		                                <% end %></td>
		                            </tr>
		                          <% end %>
		                        </tbody>
		                      </table>
								<!-- end store policies -->

							</div><!-- end col-md-6 -->
							<div class="col-md-6">
								<!-- manage store contact info -->
		                        <table class="table table-striped table-hover " style="margin-top: 50px;">
								  <thead>
								    <tr>
								      <th>Store Contact Information</th>
								      <th>Phone</th>
								      <th>Email</th>
								      <th></th>
								    </tr>
								  </thead>
								  <tbody>
								    <tr>
								      <td></td>
								      <td><span class="label label-success">Added</span></td>
								      <td><span class="label label-warning">Missing</span></td>
								      <td><%= link_to "#" do %>
		                                  <i class="fa fa-info btn btn-info" aria-hidden="true"></i>
		                                <% end %></td>
								    </tr>
								  </tbody>
								</table> 
								<!-- end store contact info -->
							</div><!-- end col-md-6 -->
						</div><!-- end row -->

						

						
			            
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
</div><!-- end wrapper -->


<%= render 'dashboards/toggle_sidebar_script' %>