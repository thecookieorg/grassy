<div class="row" style="margin-top: 30px;">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-default">
		  <div class="panel-heading">Already have account?</div>
		  <div class="panel-body">
		     <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <div class="form-group">
			    <%= f.input :email, required: false, autofocus: true, class: "form-control" %>
			    <%= f.input :password, required: false, class: "form-control" %>
			    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
			  </div>

			  <div class="form-actions">
			    <%= f.button :submit, "Log in", class: "btn btn-success btn-lg btn-block" %>
			  </div>
			<% end %>
		  </div>
		  <div class="panel-footer"><%= render "users/shared/links" %></div>
		</div>
	</div> <!-- end col-md-6 col-md-offset-3 -->
</div><!-- end row -->






